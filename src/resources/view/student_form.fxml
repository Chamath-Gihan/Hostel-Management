<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.hostel_management_system.controller.StudentFormController">
   <children>
      <ImageView fitHeight="960.0" fitWidth="1920.0">
         <image>
            <Image url="@../images/Students.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="txtID" layoutX="1413.0" layoutY="280.0" prefHeight="43.0" prefWidth="289.0">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
         <effect>
            <Reflection fraction="0.47" topOpacity="0.37" />
         </effect>
      </TextField>
      <TextField fx:id="txtName" layoutX="1413.0" layoutY="354.0" prefHeight="43.0" prefWidth="289.0">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
         <effect>
            <Reflection fraction="0.47" topOpacity="0.37" />
         </effect>
      </TextField>
      <TextField fx:id="txtAddress" layoutX="1413.0" layoutY="428.0" prefHeight="43.0" prefWidth="289.0">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
         <effect>
            <Reflection fraction="0.47" topOpacity="0.37" />
         </effect>
      </TextField>
      <TextField fx:id="txtContact" layoutX="1413.0" layoutY="502.0" prefHeight="43.0" prefWidth="289.0">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
         <effect>
            <Reflection fraction="0.47" topOpacity="0.37" />
         </effect>
      </TextField>
      <ComboBox fx:id="cmbGender" layoutX="1413.0" layoutY="650.0" onAction="#cmbGenderOnAction" prefHeight="43.0" prefWidth="289.0" promptText="Select Gender" visibleRowCount="2" />
      <Button fx:id="btnNew" layoutX="1573.0" layoutY="168.0" mnemonicParsing="false" onAction="#btnNewOnAction" prefHeight="43.0" prefWidth="129.0" text="New" textFill="#253ef5">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <effect>
            <Reflection />
         </effect>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="btnSave" layoutX="1573.0" layoutY="771.0" mnemonicParsing="false" onAction="#btnSaveOnAction" prefHeight="43.0" prefWidth="129.0" text="Save">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <effect>
            <Reflection />
         </effect>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="btnUpdate" layoutX="1375.0" layoutY="771.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" prefHeight="43.0" prefWidth="129.0" text="Update">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <effect>
            <Reflection />
         </effect>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="btnDelete" layoutX="1177.0" layoutY="771.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefHeight="43.0" prefWidth="129.0" text="Delete">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <effect>
            <Reflection />
         </effect>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <TableView fx:id="tblStudent" layoutX="77.0" layoutY="297.0" prefHeight="442.0" prefWidth="884.0">
        <columns>
          <TableColumn fx:id="colID" prefWidth="105.0" text="ID" />
          <TableColumn fx:id="colName" prefWidth="165.0" text="Name" />
            <TableColumn fx:id="colAddress" minWidth="7.0" prefWidth="235.0" text="Address" />
            <TableColumn fx:id="colContact" prefWidth="133.0" text="Contact" />
            <TableColumn fx:id="colDateOfBirth" minWidth="6.0" prefWidth="130.0" text="Date Of Birth" />
            <TableColumn fx:id="colGender" prefWidth="115.0" text="Gender" />
        </columns>
      </TableView>
      <ImageView fx:id="btnBack" fitHeight="65.0" fitWidth="65.0" layoutX="14.0" layoutY="57.0" onMouseClicked="#btnBackOnMouseClicked">
         <image>
            <Image url="@../images/back.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
      <DatePicker fx:id="txtDateOfBirth" layoutX="1413.0" layoutY="576.0" prefHeight="43.0" prefWidth="289.0" />
   </children>
</AnchorPane>
