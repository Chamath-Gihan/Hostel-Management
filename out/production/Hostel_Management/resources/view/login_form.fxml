<AnchorPane fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.hostel_management_system.controller.LoginFormController">
   <children>
      <ImageView fitHeight="960.0" fitWidth="1920.0">
         <image>
            <Image url="@../images/Login.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="txtUserName" layoutX="1271.0" layoutY="383.0" prefHeight="59.0" prefWidth="370.0" />
      <TextField fx:id="txtPassword" layoutX="1271.0" layoutY="489.0" onKeyPressed="#txtPasswordOnKeyPressed" prefHeight="59.0" prefWidth="370.0" />
      <Button fx:id="btnLogin" layoutX="1392.0" layoutY="626.0" mnemonicParsing="false" onAction="#btnLoginOnAction" prefHeight="43.0" prefWidth="129.0" text="Login">
         <effect>
            <Reflection />
         </effect>
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <ToggleButton fx:id="toggleButton" layoutX="1610.0" layoutY="507.0" mnemonicParsing="false" />
      <Label fx:id="lblShownPassword" layoutX="1284.0" layoutY="574.0" prefHeight="30.0" prefWidth="334.0" text="Label" textFill="#8a85e4">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
